{
    "name": "ayesh/composer-min-autoload",
    "description": "A Composer plugin to generate slightly minimal Autoloaders with a new `dump-min-autoload` command",
    "type": "composer-plugin",
    "keywords": ["autoload", "bad-decisions", "autoloader", "composer"],
    "require": {
        "php": "^7.4",
        "composer-plugin-api": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "composer/composer": "^1.7 || ^2.0"
    },
    "conflict": {
        "hhvm": "*"
    },
    "extra": {
        "class": "Ayesh\\ComposerAutoloadMin\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Ayesh\\ComposerAutoloadMin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ayesh\\ComposerAutoloadMin\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ayesh Karunaratne",
            "email": "ayesh@ayesh.me"
        }
    ]
}
